<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neon_orange2"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/top_nav_bar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/white"

        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/nav_cart_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/cart_btn"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableTopCompat="@drawable/cart_white_full_icon0"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/nav_order_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/orders_btn"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableTopCompat="@drawable/orders_icon"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/nav_profile_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/profile_btn"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableTopCompat="@drawable/profile_icon0"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/recyclerview_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_nav_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>