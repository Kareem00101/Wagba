<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".RestaurantActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/restaurant_top_navbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.25"
        android:background="@drawable/elevated_layout_background"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restaurant_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/back_icon"

            android:gravity="start"

            android:textAllCaps="false"
            android:textColor="@color/primary_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/restaurant_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/restaurant_activity_title"
            android:textColor="@color/light2_orange"
            android:textSize="26sp"
            android:textStyle="bold"
            app:drawableRightCompat="@drawable/menu_icon"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/restaurant_filler_txt_r1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:background="?android:attr/selectableItemBackground"

            android:clickable="false"
            android:textAllCaps="false"
            android:textColor="@color/primary_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dishes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="8"
        android:background="@drawable/recyclerview_background">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rest_to_cart_btn"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:layout_weight="0.7"
        android:background="@drawable/auth_button"
        android:letterSpacing="0.2"
        android:text="@string/restaurant_bot_nav_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

